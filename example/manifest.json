{
    "manifest_version": 2,
    "name": "Remote JS Injector",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage",
        "http://localhost:3000/hello"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}